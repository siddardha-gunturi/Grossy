<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".NoInternet_Activity">

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:src="@drawable/sorry"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NO INTERNET"
        android:textColor="#ff1012"
        android:paddingTop="100dp"
        android:textAlignment="center"
        android:paddingLeft="40dp"
        android:textSize="30dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please Check your Network Connection."
        android:textColor="#6eafff"
        android:paddingLeft="20dp"
        android:textSize="20dp"
        android:textColorHighlight="#ffc690"
        android:gravity="center"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#2122ff"
        android:text="Continue Shopping in Cynep"
        android:paddingLeft="30dp"
        android:textSize="25dp"
        android:gravity="center"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TRY AGAIN"
        android:textColor="#29ff37"
        android:background="#d8fcff"
        android:textColorHighlight="#f9b7ff"
        android:gravity="center"
        android:id="@+id/refresh"
        android:layout_gravity="center"/>

</LinearLayout>